{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "rules": {
    "typescript": "warn",
    "node": "warn",
    "import": "warn",
    "unicorn": "warn"
  },
  "env": {
    "es2021": true,
    "node": true
  },
  "ignorePatterns": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "drizzle",
    "*.config.js",
    "*.config.ts"
  ]
}
