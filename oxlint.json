{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "rules": {
    "typescript": "warn",
    "react": "warn",
    "jsx-a11y": "warn",
    "nextjs": "warn",
    "import": "warn",
    "unicorn": "warn"
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "globals": {
    "React": "readonly",
    "JSX": "readonly"
  },
  "settings": {
    "react": {
      "version": "19.0"
    }
  },
  "ignorePatterns": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "coverage",
    "drizzle",
    "*.config.js",
    "*.config.ts",
    "*.config.mjs"
  ]
}
